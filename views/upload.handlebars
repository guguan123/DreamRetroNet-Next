<h1>上传应用</h1>
{{#if error}}
  <p style="color: red;">{{error}}</p>
{{/if}}
<form action="/upload" method="post" enctype="multipart/form-data">
  <label for="name">应用名称:</label>
  <input type="text" id="name" name="name" required>
  <label for="description">应用简介:</label>
  <textarea id="description" name="description" required></textarea>
  <label for="icon">应用图标（可选）:</label>
  <input type="file" id="icon" name="icon" accept="image/*">
  <label for="screenshots">应用截图（可选，最多5张）:</label>
  <input type="file" id="screenshots" name="screenshots" accept="image/*" multiple>
  <label for="appFile">应用文件（必须）:</label>
  <input type="file" id="appFile" name="appFile" required>
  <button type="submit">上传</button>
</form>
